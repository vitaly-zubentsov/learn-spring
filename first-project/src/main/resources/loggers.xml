<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
	
	<bean id="consoleEventLogger" class="beans.ConsoleEventLogger" />
	<bean id="fileEventLogger" class="beans.FileEventLogger" init-method="init" >
		<constructor-arg  value="logs\log.txt"/>
	</bean>
	<bean id="cashFileEventLogger" class="beans.CashFileEventLogger" init-method="init" destroy-method ="destroy" >
		<constructor-arg  value="logs\log.txt"/>
		<constructor-arg  value="2"/>
	</bean>
	<bean id="dateFomat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
	<bean id="event" class="beans.Event" scope="prototype">
		<constructor-arg>
    		<bean class="java.util.Date"/>
    	</constructor-arg>	
    	<constructor-arg ref="dateFomat"/>
    </bean>
    	<bean id="combinedEventLogger" class="beans.CombinedEventLogger" depends-on="consoleEventLogger,fileEventLogger">
		<constructor-arg>
    		<list>
    			<ref bean="consoleEventLogger"/>
    			<ref bean="fileEventLogger"/>
    		</list>
    	</constructor-arg>	
    </bean>
    
    
</beans>